@model DancingGoat.Models.MediaGalleryViewModel
@{
    int index = 0;
}

<div class="media-gallery">
    <div class="title-wrapper">
        <h1 class="title-tab">@Model.MediaGalleryName</h1>
    </div>
    <div class="row">
        @foreach (var mediaFile in Model.MediaFiles)
        {
            <div class="media-item col-lg-@(index++ == 0 ? "6" : "3") col-md-6">
                <span class="cafe-overlay"><span class="ourcoffee-tile-text center-text">@mediaFile.Title</span></span>
                <div class="ratio-4-3" style="background-image: url('@Url.Content(mediaFile.RelativePath)')"></div>
            </div>
        }
    </div>
</div>